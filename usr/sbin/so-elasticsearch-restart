#########################################
# Options
#########################################
usage()
{
cat <<EOF
Restart Elasticsearch
  Options:
  -h         This message
  -v         Tail the Elasticsearch log after starting

EOF
}

while getopts "h:v" OPTION
do
        case $OPTION in
                h)
                        usage
                        exit 0
                        ;;
                v)
                        TAIL=1
                        ;;
                *)
                        usage
                        exit 0
                        ;;
        esac
done

/usr/sbin/so-elasticsearch-stop
if [[ "$TAIL" == 1 ]]; then
        /usr/sbin/so-elasticsearch-start -v
else
        /usr/sbin/so-elasticsearch-start
fi
