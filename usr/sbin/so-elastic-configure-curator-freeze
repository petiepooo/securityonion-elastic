CURATOR_FREEZE_DAYS=90
. /usr/sbin/so-elastic-common
. /etc/nsm/securityonion.conf

CURATOR_FREEZE="/etc/curator/action/freeze.yml"

if [ -f $CURATOR_CLOSE ]; then
        sed -i "s/Freeze indices older than.* days/Freeze indices older than $CURATOR_FREEZE_DAYS days/" $CURATOR_FREEZE
        sed -i "s/unit_count:.*/unit_count: $CURATOR_FREEZE_DAYS/" $CURATOR_FREEZE
fi
